<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Background: Top part (green_background) -->
    <View
        android:id="@+id/background_top"
        android:layout_width="414dp"
        android:layout_height="210dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/green_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Background: Bottom part (white) -->

    <!-- Arrow Back Button -->

    <View
        android:id="@+id/background_bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/background_top"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/btn_arrow_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:src="@drawable/arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Header -->
    <TextView
        android:id="@+id/title_computer_quiz"
        android:layout_width="209dp"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:text="Computer Quiz"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Image -->

    <!-- Questions Frame -->
    <ImageView
        android:id="@+id/icon_computer"
        android:layout_width="162dp"
        android:layout_height="181dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/computer_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Best Score Frame -->

    <!-- Time Frame -->

    <LinearLayout
        android:id="@+id/questions_frame"
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/frame_background"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <ImageView
            android:id="@+id/icon_questions"
            android:layout_width="114dp"
            android:layout_height="31dp"
            android:src="@drawable/question_icon" />

        <TextView
            android:id="@+id/questions_label"
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Questions"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/questions_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="5"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/best_score_frame"
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:layout_marginTop="220dp"
        android:background="@drawable/frame_background"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/icon_best_score"
            android:layout_width="114dp"
            android:layout_height="31dp"
            android:src="@drawable/cup_icon" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>

        <TextView
            android:id="@+id/best_score_label"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Best Score"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/best_score_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="100"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Play Now Button -->
    <LinearLayout
        android:id="@+id/time_frame"
        android:layout_width="130dp"
        android:layout_height="110dp"
        android:layout_marginTop="220dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/frame_background"
        android:orientation="vertical"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_time"
                android:layout_width="120dp"
                android:layout_height="31dp"
                android:src="@drawable/time_icon" />

        </LinearLayout>

        <TextView
            android:id="@+id/time_label"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Time"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/time_value"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="1:15m"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Follow and Info Buttons -->
    <Button
        android:id="@+id/btn_play_now"
        android:layout_width="246dp"
        android:layout_height="72dp"
        android:layout_marginTop="424dp"
        android:backgroundTint="#4CAF50"
        android:text="Play Now"
        android:textSize="30sp"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_follow"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="536dp"
        android:backgroundTint="#4CAF50"
        android:text="Follow"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.205"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_info"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="536dp"
        android:backgroundTint="#4CAF50"
        android:text="Info"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.852"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>